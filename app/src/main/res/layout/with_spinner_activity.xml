<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camomile="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rootView">

    <com.gmail.samehadar.iosdialog.CamomileSpinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/camomile_spinner_margin" />

    <com.gmail.samehadar.iosdialog.CamomileSpinner
        android:id="@+id/spinner2"
        camomile:duration="30"
        camomile:clockwise="false"
        camomile:spinnerColor="@color/colorAccent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/camomile_spinner_margin" />

    <com.gmail.samehadar.iosdialog.CamomileSpinner
        android:id="@+id/spinner3"
        camomile:duration="120"
        camomile:spinnerColor="@color/colorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/camomile_spinner_margin"  />

</LinearLayout>